#!/bin/sh
setup=$1

if [ "$1" == "mono" ]; then
	xrandr --output DP-0 --off --output DP-1 --off --output HDMI-0 --off --output DP-2 --off --output DP-3 --off --output eDP-1-1 --primary --mode 1920x1080 --pos 0x0 --rotate normal
elif [ "$1" == "dual" ]; then
	xrandr --output DP-0 --off --output DP-1 --off --output HDMI-0 --mode 1920x1080 --pos 0x0 --rotate normal --output DP-2 --off --output DP-3 --off --output eDP-1-1 --primary --mode 1920x1080 --pos 1920x0 --rotate normal
fi

# set wallpaper after setting monitor settings
~/bin/wallpaper
